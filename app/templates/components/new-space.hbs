{{#if addNewSpace}}
<div>
  <form>
    <div class="form-group">
      <label for="name">Name</label>
      {{input value=name id="name"}}
    </div>
    <div class="form-group">
      <label for="location">Location</label>
      {{input value=location id="location"}}
    </div>
    <div class="form-group">
      <label for="description">Description</label>
      {{input value=description id="description"}}
    </div>
    <div class="form-group">
      <label for="image">Image</label>
      {{input value=image id="image"}}
    </div>
    <div class="form-group">
      <label for="price">Price</label>
      {{input value=price id="price"}}
    </div>
    <button {{action 'saveSpace'}}>Save</button>
  </form>
</div>
{{else}}
<button {{action 'showSpaceForm'}} class="btn btn-default">New Space</button>
{{/if}}
