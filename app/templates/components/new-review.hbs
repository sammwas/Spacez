{{#if addNewReview}}
<h2 class="about">New Review</h2>
  <div class="well">
    <form>
      <div class="form-group">
        <label for="author" class="about">Author</label>
        {{input value=author id="author" class="form-control"}}
      </div>
      <div class="form-group">
        <label for="rating" class="about">Rating</label>
        {{input value=rating id="rating" class="form-control"}}
      </div>
      <div class="form-group">
        <label for="response" class="about">Response</label>
        {{input value=response id="response" class="form-control"}}
      </div>

      <button {{action 'saveReview'}} class="btn btn-info button hvr-grow">Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'reviewFormShow'}} class="btn btn-info button hvr-grow">New Review</button>
{{/if}}
<hr>
