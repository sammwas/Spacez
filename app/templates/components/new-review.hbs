{{#if addNewReview}}
<h2>New Review</h2>
  <div class="well">
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author" class="form-control"}}
      </div>
      <div class="form-group">
        <label for="rating">Rating</label>
        {{input value=rating id="rating" class="form-control"}}
      </div>
      <div class="form-group">
        <label for="response">Response</label>
        {{input value=response id="response" class="form-control"}}
      </div>

      <button {{action 'saveReview'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'reviewFormShow'}} class="btn btn-info">New Review</button>
{{/if}}
<hr>
